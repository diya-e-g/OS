#include <stdio.h>
#define max 30

int main()
{
    int i, j, n, temp;
    int wt[max], bt[max], at[max], tat[max], p[max];
    float atat = 0, awt = 0;

    printf("Enter the number of processes: ");
    scanf("%d", &n);

    printf("Enter the burst time for each process:\n");
    for(i = 0; i < n; i++)
    {
        scanf("%d", &bt[i]);
        p[i] = i + 1;
    }

    printf("Enter the arrival time for each process:\n");
    for(i = 0; i < n; i++)
    {
        scanf("%d", &at[i]);
    }

    // Sorting processes based on arrival time (FCFS)
    for(i = 0; i < n - 1; i++)
    {
        for(j = i + 1; j < n; j++)
        {
            if(at[i] > at[j])
            {
                temp = at[i];
                at[i] = at[j];
                at[j] = temp;

                temp = bt[i];
                bt[i] = bt[j];
                bt[j] = temp;

                temp = p[i];
                p[i] = p[j];
                p[j] = temp;
            }
        }
    }

    printf("Process\tBurst time\tArrival time\tWaiting time\tTurnaround time\n");
    wt[0] = 0;
    tat[0] = bt[0];
    awt = 0;
    atat = tat[0];

    for(i = 1; i < n; i++)
    {
        wt[i] = tat[i - 1] - at[i];
        if(wt[i] < 0) wt[i] = 0;
        tat[i] = wt[i] + bt[i];
        awt += wt[i];
        atat += tat[i];
    }

    for(i = 0; i < n; i++)
    {
        printf("%d\t%d\t\t%d\t\t%d\t\t%d\n", p[i], bt[i], at[i], wt[i], tat[i]);
    }

    awt = awt / n;
    atat = atat / n;
    printf("Average waiting time is: %f\n", awt);
    printf("Average turnaround time is: %f", atat);

    return 0;
}
